{
  "manifest_version": 3,
  "name": "Luke Health Reminder",
  "version": "2.0",
  "description": "Reminds you to drink water and take breaks.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Health Reminder"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png"
  }
}
